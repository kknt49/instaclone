<div class="container">

  <div class = "title">
    <div class = "notice">
      <p><%= notice %></p>
    </div>

    <h1>写真一覧</h1>
    <table class = "table">
      <tr>
        <th>投稿者</th>
        <th>画像</th>
        <th>コメント</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
      <% @pictures.each do |picture| %>
      <tr>
        <td><%= User.find(picture.user_id).name %></td>
        <td><%= image_tag picture.image %></td>
        <td><%= picture.content %></td>
        <td><%= link_to '詳細', picture_path(picture.id), class: 'btn btn-success' %></td>
        
        <% if picture.user_id == current_user.id %>
          <td><%= link_to '編集', edit_picture_path(picture.id), class: 'btn btn-info' %></td>
          <td><%= link_to '削除', picture_path(picture.id), method: :delete , class: 'btn btn-danger',data: { confirm: '本当に削除していいですか？' } %></td>
        <% else %>
          <td></td>
          <td></td>
        <% end %>
      </tr>
      <% end %>
    </table>
  </div>
</div>
